source "https://rubygems.org"

# Версия Jekyll, совместимая с GitHub Pages
gem "jekyll", "~> 4.3.2"

# Плагин для пагинации
gem "jekyll-paginate-v2", "~> 3.0.0"

# Официальные плагины GitHub Pages (опционально)
group :jekyll_plugins do
  gem "github-pages", "~> 228", require: false
end

# Дополнительные зависимости (если нужны)
gem "webrick", "~> 1.7"  # Требуется для Jekyll 4.0+